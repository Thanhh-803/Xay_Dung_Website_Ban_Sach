@model Game.Model.Entities.Customer

@{
    ViewData["Title"] = "LienHe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<hr />
<div class="container-md" style="center">
    <h4>Liên hệ với chúng tôi</h4>
    <div class="row">
        
        <div class="col-md-6">
            <form asp-action="LienHe">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label">Số điện thoại</label>
                    <input type="text" asp-for="Id" class="form-control w-100" placeholder="Số điện thoại(*)" required="required" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control w-100" placeholder="Họ tên(*)" required="required" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control w-100" placeholder="Địa chỉ(*)" required="required" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control w-100" placeholder="Email(*)" required="required" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Note" class="control-label"></label>
                    <input asp-for="Note" class="form-control w-100" placeholder="Tin nhắn(*)" required="required" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
                <div>
                    <p style="color:red">Lưu ý: Hãy nhập đầy đủ các trường thông tin (*) </p>
                </div>
                <div class="form-group">
                    <input type="submit" value="Gửi" class="btn btn-success" />
                </div>
                
            </form>
        </div>
        <div class="col-md-5">
            <div class="contact__map">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d14997.047326118116!2d105.98179779704493!3d19.997522702495374!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3136681547ebdcef%3A0xe138f7ef6b0df9d9!2zTmdhIFRoYW5oLCBOZ2EgU8ahbiwgVGhhbmggSG_DoSwgVmnhu4d0IE5hbQ!5e0!3m2!1svi!2s!4v1685159022537!5m2!1svi!2s" width="600" height="500" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
        
    </div>
</div>



@model Game.Model.Entities.Menu
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Administrator/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Cập nhật menu</h5>
            <form action="/Administrator/Menu/Edit" method="post" class="row-col-md-6">
                
                <div class="col-12">
                    <label asp-for="Name" class="form-label">Tên menu</label>
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="Url" class="form-label">Link</label>
                    <input type="url" asp-for="Url" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="DisplayOrder" class="form-label">Thứ tự hiển thị</label>
                    <input asp-for="DisplayOrder" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="GroupId" class="form-label">Mã nhóm Menu</label>
                    <input asp-for="GroupId" class="form-control" />
                </div>
                <div class="col-12">
                    <label asp-for="Status" class="form-label">Trạng thái</label>
                    <input asp-for="Status" class="form-control" />
                </div>
                <div class="col-12 text-center mt-2">
                    <button type="submit" class="btn btn-primary">Cập nhật</button>
                    <button type="reset" class="btn btn-secondary">Hủy</button>
                </div>
            </form>
        </div>
    </div>
</div>

